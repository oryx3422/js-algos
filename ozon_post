(async () => {
    const promises = [
        'posts',
        'comments',
        'users',
    ].map(async (method) => (await fetch(https://jsonplaceholder.typicode.com/${method})).json())

    const [
        posts,  
        comments,
        users,
    ] = await Promise.all(promises)

    // Преобразование
    const res = []
    
    for(let post of posts) {
        const resultItem = {
            id: post.id, 
            title: post.title, 
            userName: users.find(user => user.id === posts.userId)?.username, 
            commentsCount: comments.filter(comment => comment.postId === posts.id).length
        } 
        res.push(resultItem)
    } 
    return res

})();

